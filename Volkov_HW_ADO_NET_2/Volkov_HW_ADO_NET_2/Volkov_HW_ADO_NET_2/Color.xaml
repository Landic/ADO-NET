<Window x:Class="Volkov_HW_ADO_NET_2.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Volkov_HW_ADO_NET_2"
        mc:Ignorable="d"
        Title="Window1" Height="150" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Margin="5 0 0 0"  VerticalAlignment="Center">Введите цвет</Label>
        <TextBox Grid.Row="1" Margin="5" Name="textbox1"></TextBox>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Margin="5" Click="Button_Click_1">ОК</Button>
            <Button Grid.Column="1" Margin="5" Click="Button_Click">Отмена</Button>
        </Grid>
    </Grid>
</Window>
